{
  "title": "Quiz Schema",
  "type": "object",
  "required": [
    "type",
    "title",
    "description",
    "difficulty",
    "cialdini_categories",
    "questions"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["quiz"]
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "difficulty": {
      "type": "string",
      "enum": ["easy", "medium", "hard"]
    },
    "cialdini_categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "content_en", "options", "points"],
        "properties": {
          "id": { "type": "string" },
          "points": { "type": "integer", "minimum": 1 },
          "content_en": {
            "type": "object",
            "required": ["text", "explanation"],
            "properties": {
              "text": { "type": "string" },
              "explanation": { "type": "string" }
            }
          },
          "options": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "required": ["text", "correct"],
              "properties": {
                "text": { "type": "string" },
                "correct": { "type": "boolean" }
              }
            }
          }
        }
      }
    }
  }
}